generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  orders Order[]

  @@index([id])
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float

  orders Order[]

  @@index([id])
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  amount    Float
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([userId])
  @@index([productId])
}
